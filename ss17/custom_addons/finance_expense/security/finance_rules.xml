<odoo>
    <data noupdate="1">
        <record id="rule_finance_employee_own" model="ir.rule">
            <field name="name">Employee: own expenses only</field>
            <field name="model_id" ref="model_finance_expense" />
            <field name="domain_force">[('create_uid','=',user.id)]</field>
            <field name="groups" eval="[(4, ref('finance_expense.group_finance_employee'))]" />
        </record>

        <record id="rule_finance_manager_all" model="ir.rule">
            <field name="name">Manager: all expenses</field>
            <field name="model_id" ref="model_finance_expense" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('finance_expense.group_finance_manager'))]" />
        </record>

        <record id="rule_finance_auditor_all" model="ir.rule">
            <field name="name">Auditor: all expenses</field>
            <field name="model_id" ref="model_finance_expense" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('finance_expense.group_finance_auditor'))]" />
        </record>
    </data>
</odoo>