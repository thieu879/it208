<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View cho Employee -->
    <record id="view_hr_employee_management_tree" model="ir.ui.view">
        <field name="name">hr.employee.management.tree</field>
        <field name="model">hr.employee.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="position"/>
                <field name="salary" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="start_date"/>
                <field name="years_of_service"/>
                <field name="employee_status" widget="badge" 
                       decoration-success="employee_status == 'active'"
                       decoration-danger="employee_status == 'inactive'"
                       decoration-warning="employee_status == 'probation'"
                       decoration-info="employee_status == 'on_leave'"/>
            </tree>
        </field>
    </record>

    <!-- Form View cho Employee -->
    <record id="view_hr_employee_management_form" model="ir.ui.view">
        <field name="name">hr.employee.management.form</field>
        <field name="model">hr.employee.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên nhân viên..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin công việc">
                            <field name="position"/>
                            <field name="salary"/>
                            <field name="start_date"/>
                            <field name="years_of_service" readonly="1"/>
                        </group>
                        <group string="Trạng thái và liên hệ">
                            <field name="employee_status" widget="radio"/>
                            <field name="employee_email"/>
                            <field name="employee_phone"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hr_employee_management_search" model="ir.ui.view">
        <field name="name">hr.employee.management.search</field>
        <field name="model">hr.employee.management</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="position"/>
                <field name="employee_email"/>
                <separator/>
                <filter string="Đang làm việc" name="active" domain="[('employee_status', '=', 'active')]"/>
                <filter string="Nghỉ việc" name="inactive" domain="[('employee_status', '=', 'inactive')]"/>
                <separator/>
                <filter string="Quản lý" name="managers" domain="[('position', '=', 'manager')]"/>
                <filter string="Lập trình viên" name="developers" domain="[('position', '=', 'developer')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Vị trí" name="group_position" context="{'group_by': 'position'}"/>
                    <filter string="Trạng thái" name="group_status" context="{'group_by': 'employee_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action cho Employee -->
    <record id="action_hr_employee_management" model="ir.actions.act_window">
        <field name="name">Quản lý nhân viên</field>
        <field name="res_model">hr.employee.management</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo hồ sơ nhân viên đầu tiên!
            </p>
            <p>
                Quản lý thông tin nhân viên với các trường:<br/>
                - Tên (name)<br/>
                - Vị trí (position - Selection)<br/>
                - Lương (salary - default: 1000)<br/>
                - Ngày bắt đầu (start_date - default: hôm nay)
            </p>
        </field>
    </record>

    <!-- Menu cho Employee -->
    <menuitem id="menu_hr_root"
              name="Nhân sự"
              sequence="20"/>

    <menuitem id="menu_hr_employee_management"
              name="Nhân viên"
              parent="menu_hr_root"
              action="action_hr_employee_management"
              sequence="10"/>
</odoo>
