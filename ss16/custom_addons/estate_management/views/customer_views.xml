<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View cho Customer -->
    <record id="view_estate_customer_tree" model="ir.ui.view">
        <field name="name">estate.customer.tree</field>
        <field name="model">estate.customer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="property_count"/>
                <field name="total_property_value" widget="monetary"/>
            </tree>
        </field>
    </record>

    <!-- Form View cho Customer -->
    <record id="view_estate_customer_form" model="ir.ui.view">
        <field name="name">estate.customer.form</field>
        <field name="model">estate.customer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_estate_property)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-building"
                                context="{'default_customer_id': active_id, 'search_default_customer_id': active_id}">
                            <field name="property_count" widget="statinfo" string="BĐS"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên khách hàng..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin liên hệ">
                            <field name="phone"/>
                            <field name="email"/>
                        </group>
                        <group string="Thống kê">
                            <field name="total_property_value" widget="monetary"/>
                        </group>
                    </group>
                    <group>
                        <field name="address" placeholder="Nhập địa chỉ..."/>
                    </group>
                    
                    <!-- One2many field hiển thị danh sách properties -->
                    <notebook>
                        <page string="Bất động sản">
                            <field name="property_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="property_type"/>
                                    <field name="area"/>
                                    <field name="price" widget="monetary"/>
                                    <field name="address"/>
                                    <field name="active"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action cho Customer -->
    <record id="action_estate_customer" model="ir.actions.act_window">
        <field name="name">Khách hàng</field>
        <field name="res_model">estate.customer</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo khách hàng đầu tiên!
            </p>
            <p>
                Quản lý khách hàng và bất động sản của họ.<br/>
                Mỗi khách hàng có thể sở hữu nhiều bất động sản (One2many).
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_estate_root"
              name="Bất động sản"
              sequence="40"/>

    <menuitem id="menu_estate_customer"
              name="Khách hàng"
              parent="menu_estate_root"
              action="action_estate_customer"
              sequence="10"/>
</odoo>
