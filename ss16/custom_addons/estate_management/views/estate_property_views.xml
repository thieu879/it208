<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View cho EstateProperty -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="property_type"/>
                <field name="customer_id"/>
                <field name="area"/>
                <field name="price" widget="monetary"/>
                <field name="price_per_sqm" widget="monetary"/>
                <field name="address"/>
                <field name="active" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View cho EstateProperty -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên bất động sản..."/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin cơ bản">
                            <field name="property_type"/>
                            <!-- Many2one field: Chọn customer -->
                            <field name="customer_id" options="{'no_create': False, 'no_open': False}"/>
                            <field name="customer_phone" readonly="1"/>
                            <field name="customer_email" readonly="1"/>
                        </group>
                        <group string="Thông tin giá">
                            <field name="price"/>
                            <field name="area"/>
                            <field name="price_per_sqm" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <group string="Chi tiết">
                            <field name="bedrooms"/>
                            <field name="bathrooms"/>
                            <field name="address"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" placeholder="Nhập mô tả chi tiết..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_estate_property_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="customer_id"/>
                <field name="address"/>
                <separator/>
                <filter string="Đang bán" name="active" domain="[('active', '=', True)]"/>
                <filter string="Đã bán" name="sold" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Nhà ở" name="house" domain="[('property_type', '=', 'house')]"/>
                <filter string="Căn hộ" name="apartment" domain="[('property_type', '=', 'apartment')]"/>
                <filter string="Đất" name="land" domain="[('property_type', '=', 'land')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại BĐS" name="group_type" context="{'group_by': 'property_type'}"/>
                    <filter string="Chủ sở hữu" name="group_customer" context="{'group_by': 'customer_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action cho EstateProperty -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Bất động sản</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bất động sản đầu tiên!
            </p>
            <p>
                Quản lý bất động sản và liên kết với khách hàng.<br/>
                Mỗi bất động sản thuộc về một khách hàng (Many2one).
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_estate_property"
              name="Bất động sản"
              parent="menu_estate_root"
              action="action_estate_property"
              sequence="20"/>
</odoo>
