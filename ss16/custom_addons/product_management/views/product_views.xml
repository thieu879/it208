<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View cho Product -->
    <record id="view_product_management_tree" model="ir.ui.view">
        <field name="name">product.management.tree</field>
        <field name="model">product.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_name"/>
                <field name="product_price"/>
                <field name="product_quantity"/>
            </tree>
        </field>
    </record>

    <!-- Form View cho Product -->
    <record id="view_product_management_form" model="ir.ui.view">
        <field name="name">product.management.form</field>
        <field name="model">product.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_name"/>
                            <field name="product_price"/>
                        </group>
                        <group>
                            <field name="product_quantity"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action cho Product -->
    <record id="action_product_management" model="ir.actions.act_window">
        <field name="name">Quản lý sản phẩm</field>
        <field name="res_model">product.management</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo sản phẩm đầu tiên của bạn!
            </p>
        </field>
    </record>

    <!-- Menu cho Product -->
    <menuitem id="menu_product_root"
              name="Sản phẩm"
              sequence="10"/>

    <menuitem id="menu_product_management"
              name="Quản lý sản phẩm"
              parent="menu_product_root"
              action="action_product_management"
              sequence="10"/>
</odoo>
