<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="1">
    <!-- Receptionist only sees draft and confirmed bookings -->
    <record id="rule_receptionist_booking" model="ir.rule">
      <field name="name">Receptionist: visible bookings</field>
      <field name="model_id" ref="model_hotel_booking"/>
      <field name="domain_force">[('state','in',('draft','confirmed'))]</field>
      <field name="groups" eval="[(4, ref('hotel_manager.group_hotel_receptionist'))]"/>
    </record>
  </data>
</odoo>
