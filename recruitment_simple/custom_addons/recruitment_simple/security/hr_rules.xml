<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Rule: Recruiter chỉ thấy ứng viên do mình tạo -->
        <record id="hr_candidate_recruiter_rule" model="ir.rule">
            <field name="name">Recruiter: Own Candidates Only</field>
            <field name="model_id" ref="model_hr_candidate" />
            <field name="domain_force">[('create_uid', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_hr_recruiter'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_unlink" eval="False" />
        </record>

        <!-- Rule: Manager thấy tất cả -->
        <record id="hr_candidate_manager_rule" model="ir.rule">
            <field name="name">Manager: All Candidates</field>
            <field name="model_id" ref="model_hr_candidate" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_manager'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="True" />
            <field name="perm_create" eval="True" />
            <field name="perm_unlink" eval="True" />
        </record>

        <!-- Rule: Customer thấy tất cả nhưng chỉ xem -->
        <record id="hr_candidate_customer_rule" model="ir.rule">
            <field name="name">Customer: View All Candidates</field>
            <field name="model_id" ref="model_hr_candidate" />
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_hr_customer'))]" />
            <field name="perm_read" eval="True" />
            <field name="perm_write" eval="False" />
            <field name="perm_create" eval="False" />
            <field name="perm_unlink" eval="False" />
        </record>

    </data>
</odoo>