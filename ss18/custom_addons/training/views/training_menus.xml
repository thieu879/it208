<?xml version="1.0" encoding="utf-8"?>
<odoo>
  
  <!-- Action cho training.class -->
  <record id="action_training_class" model="ir.actions.act_window">
    <field name="name">Lớp học đang mở</field>
    <field name="res_model">training.class</field>
    <field name="view_mode">list,form</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Chưa có lớp nào. Hãy tạo lớp học mới!
      </p>
    </field>
  </record>

  <!-- Action cho training.subject -->
  <record id="action_training_subject" model="ir.actions.act_window">
    <field name="name">Môn học</field>
    <field name="res_model">training.subject</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Action cho training.teacher -->
  <record id="action_training_teacher" model="ir.actions.act_window">
    <field name="name">Giảng viên</field>
    <field name="res_model">training.teacher</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Action cho training.student -->
  <record id="action_training_student" model="ir.actions.act_window">
    <field name="name">Hồ sơ sinh viên</field>
    <field name="res_model">training.student</field>
    <field name="view_mode">list,form</field>
  </record>

  <!-- Action cho training.session -->
  <record id="action_training_session" model="ir.actions.act_window">
    <field name="name">Buổi học</field>
    <field name="res_model">training.session</field>
    <field name="view_mode">list,form</field>
  </record>
  
  <!-- Menu chính (App Root) -->
  <menuitem id="menu_training_root" name="Hệ thống Đào tạo" sequence="10"/>

  <!-- Menu Level 2: Quản lý Lớp -->
  <menuitem id="menu_training_class" name="Lớp học đang mở" parent="menu_training_root" action="action_training_class" sequence="1"/>

  <!-- Menu Level 2: Cấu hình -->
  <menuitem id="menu_training_config" name="Cấu hình" parent="menu_training_root" sequence="100"/>
  
  <!-- Menu cấu hình: Môn học -->
  <menuitem id="menu_training_subject" name="Môn học" parent="menu_training_config" action="action_training_subject" sequence="1"/>
  
  <!-- Menu cấu hình: Giảng viên -->
  <menuitem id="menu_training_teacher" name="Giảng viên" parent="menu_training_config" action="action_training_teacher" sequence="2"/>
  
  <!-- Menu cấu hình: Hồ sơ Sinh viên -->
  <menuitem id="menu_training_student" name="Hồ sơ Sinh viên" parent="menu_training_config" action="action_training_student" sequence="3"/>

</odoo>
