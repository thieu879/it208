<odoo>
  <data>

    <record id="view_training_class_list" model="ir.ui.view">
      <field name="name">training.class.list</field>
      <field name="model">training.class</field>
      <field name="arch" type="xml">
        <list decoration-info="state=='draft'" decoration-success="state=='open'" decoration-muted="state=='closed'" decoration-bf="state=='open'">
          <field name="name"/>
          <field name="subject_id"/>
          <field name="teacher_id"/>
          <field name="start_date"/>
          <field name="end_date"/>
          <field name="student_count"/>
          <field name="max_student"/>
          <field name="occupancy_rate" widget="progressbar"/>
          <field name="state" widget="badge"/>
        </list>
      </field>
    </record>

    <record id="view_training_class_form" model="ir.ui.view">
      <field name="name">training.class.form</field>
      <field name="model">training.class</field>
      <field name="arch" type="xml">
        <form>
          <!-- HEADER với Status Bar -->
          <header>
            <field name="state" widget="statusbar" options="{'clickable': True}"/>
          </header>

          <sheet>
            <!-- TIÊU ĐỀ -->
            <div class="oe_title">
              <h1>
                <field name="name" placeholder="Tên lớp học..."/>
              </h1>
            </div>

            <!-- THÔNG TIN (2 cột) -->
            <group string="Thông tin Lớp">
              <group>
                <field name="subject_id" options="{'no_create': True}"/>
                <field name="teacher_id" options="{'no_create': True}"/>
              </group>
              <group>
                <field name="start_date"/>
                <field name="end_date"/>
              </group>
            </group>

            <!-- SĨ SỐ VÀ THỜI LƯỢNG -->
            <group string="Thống Kê">
              <group>
                <field name="max_student"/>
                <field name="student_count" readonly="1"/>
              </group>
              <group>
                <field name="occupancy_rate" widget="progressbar" readonly="1"/>
                <field name="total_duration" readonly="1"/>
              </group>
            </group>

            <!-- SĐT GIẢNG VIÊN -->
            <group>
              <field name="teacher_phone" readonly="1"/>
            </group>

            <!-- NOTEBOOK (2 TABS) -->
            <notebook>
              <!-- TAB 1: DANH SÁCH SINH VIÊN -->
              <page string="Danh sách sinh viên" name="students">
                <field name="student_ids">
                  <list>
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="email"/>
                  </list>
                </field>
              </page>

              <!-- TAB 2: LỊCH HỌC CHI TIẾT -->
              <page string="Lịch học" name="sessions">
                <field name="session_ids">
                  <list editable="bottom">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="duration"/>
                  </list>
                </field>
              </page>
            </notebook>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_training_class_search" model="ir.ui.view">
      <field name="name">training.class.search</field>
      <field name="model">training.class</field>
      <field name="arch" type="xml">
        <search>
          <field name="name"/>
          <field name="subject_id"/>
          <field name="teacher_id"/>
          
          <separator/>
          
          <group expand="1" string="Gom nhóm theo">
            <filter name="grp_subject" string="Môn học" context="{'group_by': 'subject_id'}"/>
            <filter name="grp_teacher" string="Giảng viên" context="{'group_by': 'teacher_id'}"/>
          </group>
        </search>
      </field>
    </record>

    <record id="view_training_subject_list" model="ir.ui.view">
      <field name="name">training.subject.list</field>
      <field name="model">training.subject</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="code"/>
          <field name="description"/>
        </list>
      </field>
    </record>

    <!-- FORM VIEW - training.subject -->
    <record id="view_training_subject_form" model="ir.ui.view">
      <field name="name">training.subject.form</field>
      <field name="model">training.subject</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="code"/>
              <field name="description"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_training_teacher_list" model="ir.ui.view">
      <field name="name">training.teacher.list</field>
      <field name="model">training.teacher</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="phone"/>
          <field name="bio"/>
        </list>
      </field>
    </record>

    <!-- FORM VIEW - training.teacher -->
    <record id="view_training_teacher_form" model="ir.ui.view">
      <field name="name">training.teacher.form</field>
      <field name="model">training.teacher</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="phone"/>
              </group>
              <group>
                <field name="bio"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_training_student_list" model="ir.ui.view">
      <field name="name">training.student.list</field>
      <field name="model">training.student</field>
      <field name="arch" type="xml">
        <list>
          <field name="name"/>
          <field name="student_id"/>
          <field name="email"/>
        </list>
      </field>
    </record>

    <!-- FORM VIEW - training.student -->
    <record id="view_training_student_form" model="ir.ui.view">
      <field name="name">training.student.form</field>
      <field name="model">training.student</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
                <field name="student_id"/>
              </group>
              <group>
                <field name="email"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="view_training_session_list" model="ir.ui.view">
      <field name="name">training.session.list</field>
      <field name="model">training.session</field>
      <field name="arch" type="xml">
        <list>
          <field name="class_id"/>
          <field name="name"/>
          <field name="date"/>
          <field name="duration"/>
        </list>
      </field>
    </record>

    <!-- FORM VIEW - training.session -->
    <record id="view_training_session_form" model="ir.ui.view">
      <field name="name">training.session.form</field>
      <field name="model">training.session</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="class_id"/>
                <field name="name"/>
              </group>
              <group>
                <field name="date"/>
                <field name="duration"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

  </data>
</odoo>
